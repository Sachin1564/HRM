@using EntityLayer.WebApplication.ViewModels.CandidateVM
@model CandidateAddVM
@{
    ViewData["Title"] = "AddCandidate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
    <h5 class="card-title">Add Candidate</h5>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Candidate" asp-action="GetCandidateList">Candidate</a></li>
            <li class="breadcrumb-item active">Add About</li>
        </ol>
    </nav>
</div>



<div class="card">
    <div class="card-body">


        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Candidate" asp-action="AddCandidate" method="post" class="row g-3" enctype="multipart/form-data">
           
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName">
                    <label asp-for="FirstName">FirstName</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="LastName" type="text" class="form-control" placeholder="LastName">
                    <label asp-for="LastName">LastName</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="DateOfBirth" type="date" class="form-control" placeholder="DateOfBirth">
                    <label asp-for="DateOfBirth">DateOfBirth</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    <label asp-for="Email">Email</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Phone" type="number" class="form-control" placeholder="Phone">
                    <label asp-for="Phone">Phone</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                    <label asp-for="Address">Address</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="City" type="text" class="form-control" placeholder="City">
                    <label asp-for="City">City</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="State" type="text" class="form-control" placeholder="State">
                    <label asp-for="State">State</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="ZipCode" type="number" class="form-control" placeholder="ZipCode">
                    <label asp-for="ZipCode">ZipCode</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="EducationLevel" type="text" class="form-control" placeholder="EducationLevel">
                    <label asp-for="EducationLevel">EducationLevel</label>
                </div>
            </div>
             <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="University" type="text" class="form-control" placeholder="University">
                    <label asp-for="University">University</label>
                </div>
            </div>
             <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Major" type="text" class="form-control" placeholder="Major">
                    <label asp-for="Major">Major</label>
                </div>
            </div>
             <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="GraduationDate" type="date" class="form-control" placeholder="GraduationDate">
                    <label asp-for="GraduationDate">GraduationDate</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="WorkExperience" type="number" class="form-control" placeholder="WorkExperience">
                    <label asp-for="WorkExperience">WorkExperience</label>
                </div>
            </div>

           


              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>
