@using EntityLayer.WebApplication.ViewModels.HomePageVM
@model HomePageAddVM
@{
    ViewData["Title"] = "AddHomePage";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">


        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="HomePage" asp-action="AddHomePage" method="post" class="row g-3" >
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Header" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Header">Header</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Description" type="text" class="form-control" placeholder="Description"></textarea>
                    <label asp-for="Description">Description</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="VideoLink" type="text" class="form-control" placeholder="Clients">
                    <label asp-for="VideoLink">VideoLink</label>
                </div>
            </div>
           
            
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End floating Labels Form -->

    </div>
</div>






