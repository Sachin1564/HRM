@using EntityLayer.WebApplication.ViewModels.HomePageVM
@model List<HomePageListVM>
@{
    ViewData["Title"] = "GetHomePageList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title">HomePage</h5>

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
        <li class="breadcrumb-item active">HomePage</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">

        <!-- Table with hoverable rows -->
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Header</th>
                    <th scope="col">VideoLink</th>
                    <th scope="col">CreatedDate</th>
                    <th scope="col">UpdateDate</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Header</td>
                        @if(item.VideoLink == null || item.VideoLink == string.Empty)
                        {
                            <td>Not Assinged</td>
                        }
                        else
                        {
                            <td>Assinged</td>
                        }
                        <td>@item.CreatedDate</td>
                        <td>@item.UpdateDate</td>
                        <td><a asp-area="Admin" asp-controller="HomePage" asp-route-id="@item.Id" asp-action="UpdateHomePage" data-id="@item.Id" class="btn btn-warning btn-sm">Edit</a></td>
                        <td><a asp-area="Admin" asp-controller="HomePage" asp-route-id="@item.Id" asp-action="DeleteHomePage" data-id="@item.Id" class="btn btn-danger btn-sm">Delete</a></td>
 
                    </tr>
                }
            </tbody>
        </table>
        <!-- End Table with hoverable rows -->

        <a asp-area="Admin" asp-controller="HomePage" asp-action="AddHomePage" class="btn btn-success btn-sm">Add HomePage</a>
    </div>
</div>


